        android:layout_alignLeft="@+id/nbGardeSansTxt"
        android:layout_alignStart="@+id/nbGardeSansTxt" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/nbJeuPrisButton"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/nbJeuPrisTxt"
