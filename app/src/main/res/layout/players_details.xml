        android:text="0"
        android:id="@+id/nbPoignetTxt"
        android:layout_alignTop="@+id/nbPoignetTitle"
        android:layout_alignLeft="@+id/nbJeuAssocieTxt"
        android:layout_alignStart="@+id/nbJeuAssocieTxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Misère(s):"
        android:id="@+id/nbMisereTitle"
        android:layout_below="@+id/nbPoignetTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
