        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/nbPetiteButton"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/nbPetiteTxt"
        android:layout_alignTop="@+id/nbPetiteTxt" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/nbPouceButton"
        android:layout_centerHorizontal="true"
