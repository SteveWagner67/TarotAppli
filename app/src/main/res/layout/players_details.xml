        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/nbVictoireTxt"
        android:layout_alignTop="@+id/nbVictoireTitle"
        android:layout_alignLeft="@+id/nbJeuPrisTxt"
        android:layout_alignStart="@+id/nbJeuPrisTxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Défaite(s):"
        android:id="@+id/nbDefaiteTitle"
