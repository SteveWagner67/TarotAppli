        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/nbGardeButton"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/nbGardeTxt"
        android:layout_alignTop="@+id/nbGardeTxt" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/nbGardeSansButton"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/nbGardeSansTxt"
        android:layout_alignTop="@+id/nbGardeSansTxt" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/nbGardeContreButton"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/nbGardeContreTxt"
